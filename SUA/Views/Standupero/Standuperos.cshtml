<div id="container" class="main-content" style="padding:50px;  width: 100%;">

    @if (ViewBag.mensaje == "listar")
    {
        <table style="border-spacing: 20px">
            <tr>
                <td>
                    <div id="entries" style="width:200px"></div>
                </td>
                <td>
                    <div id="botones" style="width:200px; padding-top:5px"></div>
                </td>
                <td>
                    <div id="busqueda" style="width:200px"></div>
                </td>
            </tr>
        </table>
        <hr style="color: #8dd9f7">

        <div style="width: 100%; overflow-x: auto;  white-space: nowrap;">

            <table id="table_standuperos" class="display compact hover nowrap">
                <thead>
                    <tr>
                        <th></th>
                        <th>Nombre</th>
                        <th>Dni</th>
                        <th>Transporte Propio</th>
                        <th>Celular</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th></th>
                        <th>Nombre</th>
                        <th>Dni</th>
                        <th>Transporte Propio</th>
                        <th>Celular</th>
                        <th>Email</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in ViewBag.standuperos)
                    {
                        <tr>
                            <td>
                                @Html.ActionImage("DeleteStandupero", "Standupero", new { dni = item.Dni }, "~/assets/img/delete_icon.png")
                                @Html.ActionImage("Standupero", "Standupero", new { dni = item.Dni }, "~/assets/img/edit_icon.png")
                            </td>
                            <td>@item.Nombre @item.Apellido</td>
                            <td>@item.Dni</td>
                            <td>@item.TransportePropio</td>
                            <td>@item.Celular</td>
                            <td>@item.Email</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>

        <hr style="color: #8dd9f7">
        <table style="border-spacing: 20px">
            <tr>
                <td>
                    <div id="info" style="width:200px"></div>
                </td>
                <td>
                    <div id="paginado" style="width:200px"></div>
                </td>
            </tr>
        </table>
    }
    else
    {
        <label>@ViewBag.mensaje</label>
    }

</div>

