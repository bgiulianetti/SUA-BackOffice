<div id="container" class="main-content" style="padding:50px;  width: 100%;">
    @if (ViewBag.mensaje == "listar")
    {
        <table style="border-spacing: 20px">
            <tr>
                <td>
                    <div id="entries" style="width:200px">
                        <a href="@Url.RouteUrl("User")">
                            <input type="button" value="Crear Usuario" class="form-control" style="width:190px" />
                        </a>
                    </div>
                </td>
                <td>
                    <div id="botones" style="width:200px; padding-top:5px"></div>
                </td>
                <td>
                    <div id="busqueda" style="width:200px"></div>
                </td>
            </tr>
        </table>
        <hr style="color: #8dd9f7">

        <div style="width: 100%; overflow-x: auto;  white-space: nowrap;">

            <table id="table_users" class="display compact hover nowrap">
                <thead>
                    <tr>
                        <th></th>
                        <th>Ultimo Login</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>UserMaster</th>
                        <th>Standuperos</th>
                        <th>Productores</th>
                        <th>Shows</th>
                        <th>Fechas</th>
                        <th>Bordereaux</th>
                        <th>Reportes</th>
                        <th>Salas</th>
                        <th>Hoteles</th>
                        <th>Restaurantes</th>
                        <th>Bloqueado</th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th></th>
                        <th>Ultimo Login</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>UserMaster</th>
                        <th>Standuperos</th>
                        <th>Productores</th>
                        <th>Shows</th>
                        <th>Fechas</th>
                        <th>Bordereaux</th>
                        <th>Reportes</th>
                        <th>Salas</th>
                        <th>Hoteles</th>
                        <th>Restaurantes</th>
                        <th>Bloqueado</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in ViewBag.users)
                    {
                        <tr>
                            <td>
                                @Html.ActionImage("Usuario", "User", new { id = item.UniqueId }, "~/assets/img/edit_icon.png")
                            </td>
                            <td>@item.LastLogin</td>
                            <td>@item.Username</td>
                            <td>@item.MailRecover</td>
                            <td>@item.UserMaster</td>
                            <td>@item.Standuperos</td>
                            <td>@item.Productores</td>
                            <td>@item.Shows</td>
                            <td>@item.Fechas</td>
                            <td>@item.Bordereaux</td>
                            <td>@item.Reportes</td>
                            <td>@item.Salas</td>
                            <td>@item.Hoteles</td>
                            <td>@item.Restaurantes</td>
                            <td>@item.Blocked</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <hr style="color: #8dd9f7">
        <table style="border-spacing: 20px">
            <tr>
                <td>
                    <div id="info" style="width:200px"></div>
                </td>
                <td>
                    <div id="paginado" style="width:200px"></div>
                </td>
            </tr>
        </table>

    }
    else
    {
        <label>@ViewBag.mensaje</label>
    }

</div>
<script>

    $(document).ready(function () {
        var tableSalas = $('#table_users').DataTable({
            responsive: true,
            'columnDefs': [{ "targets": 0, "className": "text-center" }]
        });

        AcomodaDOM();
    });

    function AcomodaDOM() {
        $('#table_users_filter').hide();
        $("#divCapacidad").append($("#SearchContainer"));
        $("#info").append($("#table_users_info"));
        $("#table_users_paginate").hide();
        $("#entries").append($(".dt-buttons"));
        $("#botones").append($(".dataTables_length"));
    }


</script>
